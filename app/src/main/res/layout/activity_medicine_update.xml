<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.medical.Medicine.MedicineUpdateActivity"
    android:background="@color/white">

    <include
        android:id="@+id/topBarOuter"
        layout="@layout/medical_dailycare_update_top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#0AD0D0D0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBarOuter">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_medi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:textSize="16dp"
                    android:text="약 이름"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextM"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:paddingHorizontal="10dp"
                    android:ems="10"
                    android:hint="약 이름 작성"
                    android:inputType="text" />

                <TextView
                    android:id="@+id/text_startD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="복용 시작일"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextStartD"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:paddingHorizontal="10dp"
                    android:ems="10"
                    android:hint="복용 시작일 작성"
                    android:inputType="date" />

                <TextView
                    android:id="@+id/text_endD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="복용 종료일"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextEndD"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:paddingHorizontal="10dp"
                    android:ems="10"
                    android:hint="복용 종료일 작성"
                    android:inputType="date"/>

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="현재 복용 중"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/text_acc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="메모"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="72dp"
                    android:background="@drawable/edittext_rounded_corner_rectangle"
                    android:paddingTop="10dp"
                    android:paddingHorizontal="10dp"
                    android:ems="10"
                    android:gravity="start|top"
                    android:hint="메모"
                    android:inputType="textMultiLine" />
            </LinearLayout>
        </ScrollView>

    </FrameLayout>

